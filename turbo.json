{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "outputMode": "full",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_CONTENTFUL_SPACE_ID",
        "NEXT_PUBLIC_CONTENTFUL_DELIVERY_ACCESS_TOKEN",
        "NEXT_PUBLIC_CONTENTFUL_PREVIEW_ACCESS_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}